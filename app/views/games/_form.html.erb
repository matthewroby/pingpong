<%= form_for(@game, html: {class: "form-horizontal center"}) do |f| %>
  <% if @game.errors.any? %>
    <div class="alert alert-warning">
      <h4><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :played_at, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :played_at, {:order => [:day, :month, :year, :hour, :minute]}, {class: "date form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Your Opponent", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :player_2_id, @user.opponents, :id, :fullname, {}, {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Your Score", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :player_1_score, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Opponent's Score", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :player_2_score, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Save Game", class: "btn btn-primary btn-default" %>
      <%= link_to 'Cancel', root_path, class: "btn btn-secondary btn-default" %>
    </div>
  </div>
<% end %>
